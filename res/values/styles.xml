<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- Login theme. -->
    <style name="LoginTheme" parent="android:Theme.Holo.Light.NoActionBar" />

    <style name="LoginTitle" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:shadowColor">@color/default_text_shadow_color</item>
        <item name="android:shadowDx">4</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:textSize">60sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LoginSubTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:shadowColor">@color/default_text_shadow_color</item>
        <item name="android:shadowDx">4</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="defaultMediumText" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:shadowColor">@color/default_text_shadow_color</item>
        <item name="android:shadowDx">4</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="buttonStyleWhite" parent="@android:style/Widget.Button">
        <item name="android:textSize">24sp</item>
        <item name="android:height">60dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#4789b2</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/default_white_button</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="defaultEditText" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/edit_text_holo_light</item>
        <item name="android:textColor">@color/default_text_color</item>
    </style>

</resources>